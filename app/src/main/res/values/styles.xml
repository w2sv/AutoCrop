<resources>

    <!-- Splash Theme -->

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/magenta_saturated</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_nobackground_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

    <!-- App Theme -->

    <style name="Theme.App.Main" parent="Theme.Material3.Dark.NoActionBar">

        <!-- disable all caps -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <!-- enable translucent mode -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- color -->
        <item name="android:windowBackground">@color/neutral_background</item>
        <item name="colorAccent">@color/higher_light</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/higher_light</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/low_alpha_gray</item>
    </style>


    <!--App Title TextView-->

    <style name="ShadowVisible">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ShadowMarginal">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="AutoCropTV" parent="ShadowVisible">
        <item name="android:text">@string/auto_crop</item>
        <item name="android:textColor">@color/magenta_saturated</item>
        <item name="fontFamily">@font/tiltprism</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AutoCropTVBig" parent="AutoCropTV">
        <item name="android:textSize">52sp</item>
    </style>

    <!--Misc-->

    <style name="CropAdjustmentButton">
        <item name="android:layout_width">@dimen/toolbar_button_width</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:background">@drawable/shape_rounded_rectangle_w_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>