<resources>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground"></item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_camera</item>
<!--        <item name="windowSplashScreenAnimationDuration">2000</item>  # Required for animated icons-->

        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

    <!-- App Theme -->

    <style name="Theme.App.Main" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/black</item>

        <!-- disable all caps -->

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- enable fullscreen mode -->

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTitleTextView">
        <item name="android:textSize">42sp</item>
        <item name="android:text">@string/app_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/magenta</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>

