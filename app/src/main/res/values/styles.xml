<resources>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/magenta_saturated</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_nobackground_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

    <!-- App Theme -->

    <style name="Theme.App.Main" parent="Theme.AppCompat.NoActionBar">

        <!-- disable all caps -->
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <!-- enable translucent mode -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- color -->
        <item name="android:windowBackground">@color/neutral_background</item>
        <item name="colorAccent">@color/higher_light</item>

    </style>

    <style name="ButtonRowLabel">
        <item name="android:textSize">@dimen/text_size_medium_small</item>
        <item name="android:paddingHorizontal">2dp</item>
    </style>

    <style name="Shadow">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="CropAdjustmentButton">
        <item name="android:layout_width">@dimen/crop_adjustment_screen_width_toolbar_buttons</item>
        <item name="android:layout_height">@dimen/height_button_row</item>
        <item name="android:layout_marginHorizontal">
            @dimen/crop_adjustment_screen_horizontal_margin_top_buttons
        </item>
        <item name="android:background">@drawable/shape_rounded_rectangle_w_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    App Title TextView-->

    <style name="AutoCropTV" parent="Shadow">
        <item name="android:text">@string/auto_crop</item>
        <item name="android:textColor">@color/magenta_saturated</item>
        <item name="android:fontFamily">@font/london</item>
    </style>

    <style name="AutoCropTVBig" parent="AutoCropTV">
        <item name="android:textSize">52sp</item>
    </style>

</resources>