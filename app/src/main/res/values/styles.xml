<resources>

    <!-- App Theme -->

    <style name="Theme.App.Main" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/black</item>

        <!-- disable all caps -->

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- enable fullscreen mode -->

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/custom_checkbox</item>
<!--        <item name="android:listChoiceBackgroundIndicator">@drawable/ic_baseline_redo_24</item>-->

<!--        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>-->

    </style>

    <!--    Splash Theme-->

    <style name="Theme.App.Splash" parent="Theme.App.Main">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!--    App Title TextView-->

    <style name="AppTitleTextView">
        <item name="android:textSize">42sp</item>
        <item name="android:text">@string/app_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/saturated_magenta</item>
    </style>

</resources>