<resources>

    <!-- App Theme -->

    <style name="MainAppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@android:color/black</item>

        <!-- disable all caps -->

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

        <!-- enable fullscreen mode -->

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <!--    Splash Theme-->

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/MainAppTheme</item>
        <item name="windowSplashScreenBackground">@color/magenta</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/brudineletten_foreground</item>
    </style>

    <!--    App Title TextView-->

    <style name="AppTitleTextView">
        <item name="android:textSize">42sp</item>
        <item name="android:text">@string/app_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/magenta</item>
    </style>

</resources>