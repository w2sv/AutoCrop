<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:elevation="4dp">

        <!-- Button -->

        <!-- Dismiss All -->

        <Button
            android:id="@+id/discard_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:text="@string/discard_all_button"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:translationX="-10dp" />

        <!-- Save All -->

        <Button
            android:id="@+id/save_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:text="@string/save_all_button"
            android:textStyle="bold"
            android:textColor="@color/dark_green"
            android:translationX="-10dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- View Pager -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/black"/>

    <com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationLayout
        android:layout_width="145dp"
        android:layout_height="wrap_content"

        android:id="@+id/page_indication_elements"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible">

        <!-- https://en.proft.me/2018/02/5/decorating-seekbar-android/ -->
        <com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationSeekBar
            android:id="@+id/page_indication_seek_bar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:splitTrack="false"

            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:thumb="@drawable/seekbar_tumb_examination_activity"

            android:outlineProvider="paddedBounds"
            android:progressTint="@android:color/transparent"

            android:max="100">
        </com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationSeekBar>

        <!-- Page Indication Text View -->

        <com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationTextView
            android:id="@+id/page_indication_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:text="@string/fracture"
            android:textColor="@color/magenta"
            android:textSize="15sp"
            android:textStyle="italic" />

    </com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationLayout>

    <TextView
        android:id="@+id/auto_scrolling_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar"

        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"

        android:text="@string/auto_scrolling"
        android:textColor="@color/saturated_magenta"
        android:textSize="16sp"
        android:textStyle="bold"

        android:visibility="invisible"

        tools:ignore="RelativeOverlap">

    </TextView>

    <com.autocrop.activities.examination.fragments.viewpager.views.DiscardedTextView
        android:id="@+id/discarding_statistics_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="90dp"
        android:layout_marginHorizontal="30dp"

        android:textSize="13sp"

        android:visibility="invisible"

        tools:ignore="RelativeOverlap"/>

</RelativeLayout>