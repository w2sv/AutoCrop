<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/magenta"
    android:elevation="4dp">

    <!-- Button -->

        <!-- Dismiss All -->

    <Button
        android:id="@+id/discard_all_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:text="@string/discard_all_button"
        android:textColor="#302C2D"
        android:translationX="-10dp" />

        <!-- Save All -->

    <Button
        android:id="@+id/save_all_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:text="@string/save_all_button"
        android:textColor="#302C2D"
        android:translationX="-10dp"/>

    <!-- Page Indication Text View -->

    <com.autocrop.activities.examination.fragments.viewpager.PageIndicationTextView
        android:id="@+id/page_indication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="end"
        android:translationX="-14dp"

        android:text="@string/fracture"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="italic"/>

</androidx.appcompat.widget.Toolbar>