<?xml version="1.0" encoding="utf-8"?>
<com.autocrop.activities.examination.fragments.viewpager.ExaminationToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/transparent"
    android:visibility="invisible"
    android:elevation="4dp">

    <!-- Button -->

        <!-- Dismiss All -->

    <Button
        android:id="@+id/discard_all_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:text="@string/discard_all_button"
        android:textColor="@color/magenta"
        android:translationX="-10dp" />

        <!-- Save All -->

    <Button
        android:id="@+id/save_all_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:text="@string/save_all_button"
        android:textColor="@color/magenta"
        android:translationX="-10dp"/>

</com.autocrop.activities.examination.fragments.viewpager.ExaminationToolBar>