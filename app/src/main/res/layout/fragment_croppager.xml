<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- View Pager -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/background"/>

    <!--    Page Indication Layout-->

    <RelativeLayout
        android:id="@+id/page_indication_layout"

        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="18dp">

        <!-- https://en.proft.me/2018/02/5/decorating-seekbar-android/ -->

        <com.autocrop.activities.iodetermination.fragments.croppager.views.PageIndicationBar
            android:id="@+id/page_indication_bar"
            android:visibility="invisible"

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:splitTrack="false"
            android:thumb="@drawable/ic_location_on_24"
            android:outlineProvider="paddedBounds"
            android:max="100">
        </com.autocrop.activities.iodetermination.fragments.croppager.views.PageIndicationBar>

        <!-- Page Indication Text View -->

        <com.autocrop.activities.iodetermination.fragments.croppager.views.PositionTextView
            android:id="@+id/page_indication_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/page_indication_bar"
            android:layout_alignParentEnd="true"

            android:text="@string/fraction"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:textStyle="italic"

            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <com.autocrop.activities.iodetermination.fragments.croppager.views.CancelAutoScrollButton
        android:id="@+id/cancel_auto_scroll_button"
        android:visibility="invisible"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"

        android:paddingHorizontal="3dp"

        android:text="@string/cancel_autoscroll"
        android:textColor="@color/magenta_bright"
        android:textSize="14sp"
        android:background="@drawable/shape_oval_w_border"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snackbar_repelled_hosting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.autocrop.ui.SnackbarRepelledLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_marginHorizontal="@dimen/margin_top_left_image_button">

            <com.autocrop.activities.iodetermination.fragments.croppager.views.DiscardingStatisticsTextView
                android:id="@+id/discarding_statistics_tv"
                android:visibility="invisible"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/remove"
                android:textSize="13sp"
                android:textColor="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="end">

                <com.autocrop.activities.iodetermination.fragments.croppager.views.ManualCropButton
                    android:id="@+id/manual_crop_button"
                    android:layout_width="@dimen/size_image_button"
                    android:layout_height="@dimen/size_image_button"
                    android:layout_marginEnd="20dp"

                    android:background="@drawable/ic_crop_24_border"
                    android:backgroundTint="@color/magenta_bright"

                    android:contentDescription="@string/manually_adjust_the_crop"/>

                <com.autocrop.activities.iodetermination.fragments.croppager.views.ComparisonButton
                    android:id="@+id/comparison_button"
                    android:layout_width="@dimen/size_image_button"
                    android:layout_height="@dimen/size_image_button"

                    android:background="@drawable/ic_image_search_24_border"
                    android:backgroundTint="@color/magenta_bright"

                    android:contentDescription="@string/compare_crop_and_original_screenshot"/>
            </LinearLayout>
        </com.autocrop.ui.SnackbarRepelledLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>