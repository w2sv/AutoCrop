<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->

    <com.autocrop.activities.examination.fragments.viewpager.views.ButtonToolbar
        android:id="@+id/button_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        android:elevation="4dp">

        <!-- Button -->

        <!-- Dismiss All -->

        <com.autocrop.activities.examination.fragments.viewpager.views.DiscardAllButton
            android:id="@+id/discard_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:text="@string/discard_all_button"
            android:textStyle="bold"
            android:textColor="@color/accentuated_tv"
            android:translationX="-10dp" />

        <!-- Save All -->

        <com.autocrop.activities.examination.fragments.viewpager.views.SaveAllButton
            android:id="@+id/save_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:text="@string/save_all_button"
            android:textStyle="bold"
            android:textColor="@color/accentuated_tv"
            android:translationX="-10dp"/>

    </com.autocrop.activities.examination.fragments.viewpager.views.ButtonToolbar>

    <!-- View Pager -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/black"/>

    <RelativeLayout
        android:layout_width="145dp"
        android:layout_height="wrap_content"

        android:id="@+id/page_indication_layout"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"

        android:visibility="invisible">

        <!-- https://en.proft.me/2018/02/5/decorating-seekbar-android/ -->
        <com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationBar
            android:id="@+id/page_indication_bar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:splitTrack="false"

            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:thumb="@drawable/seekbar_thumb_examination_activity"

            android:outlineProvider="paddedBounds"

            android:max="100">
        </com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationBar>

        <!-- Page Indication Text View -->

        <com.autocrop.activities.examination.fragments.viewpager.views.PageIndicationTextView
            android:id="@+id/page_indication_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:text="@string/fracture"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:textStyle="italic"

            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <TextView
        android:id="@+id/auto_scrolling_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_toolbar"

        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"

        android:text="@string/auto_scrolling"
        android:textColor="@color/accentuated_tv"
        android:textSize="16sp"
        android:textStyle="bold"

        android:visibility="invisible">

    </TextView>

    <com.autocrop.activities.examination.fragments.viewpager.views.DiscardingStatisticsTextView
        android:id="@+id/discarding_statistics_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"

        android:textSize="13sp"
        android:textColor="@color/light_gray"

        android:visibility="invisible"/>

</RelativeLayout>