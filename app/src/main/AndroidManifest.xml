<?xml version="1.0" encoding="utf-8"?>

<!-- package name not to be touched (due to app already having been uploaded to playstore) -->
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bunsenbrenner.screenshotboundremoval">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name= "android.permission.INTERNET"/>

    <!-- setting requestLegacyExternalStorage to true effectuates opting out of
         scoped storage for API 29 = Android 10 to enable external storage writing
         Reference: https://developer.android.com/training/data-storage/use-cases#modify-delete-media -->

    <!--Reference: https://developer.android.com/guide/topics/manifest/application-element -->
    <application
        android:label="@string/app_title"

        android:icon="@mipmap/brudineletten"
        android:roundIcon="@mipmap/brudineletten_round"
        android:theme="@style/AppTheme"

        android:requestLegacyExternalStorage="true"
        android:allowBackup="false"
        android:supportsRtl="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1494255973790385~6108360503"/>

        <!-- Activities -->
        <activity
            android:name="com.autocrop.activities.welcome.WelcomeActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.autocrop.activities.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.autocrop.activities.cropping.CroppingActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.autocrop.activities.examination.ExaminationActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>