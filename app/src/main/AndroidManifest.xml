<?xml version="1.0" encoding="utf-8"?>

<!-- package name not to be touched (due to app already having been uploaded to playstore) -->
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions

        https://stackoverflow.com/questions/64221188/write-external-storage-when-targeting-android-10

        WRITE_EXTERNAL_STORAGE implies READ_EXTERNAL_STORAGE
            Reference: https://stackoverflow.com/questions/11942400/do-i-have-to-declare-both-write-external-storage-and-read-external-storage -->

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- https://stackoverflow.com/a/65477206/12083276 -->

    <!-- setting requestLegacyExternalStorage to true effectuates opting out of
         scoped storage for API 29 = Android 10 to enable external storage writing
         Reference: https://developer.android.com/training/data-storage/use-cases#modify-delete-media -->

    <!--Reference: https://developer.android.com/guide/topics/manifest/application-element -->
    <application
        android:label="@string/app_title"
        tools:replace="android:label"

        android:name="com.autocrop.AutoCrop"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Main"

        android:appCategory="image"
        tools:targetApi="o">

        <service
            android:name="com.autocrop.screencapturelistening.CropService"
            android:exported="false"/>

        <!-- Activities -->

        <activity
            android:name="com.autocrop.activities.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Splash">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.autocrop.activities.cropping.CropActivity" />

        <activity
            android:name="com.autocrop.activities.iodetermination.IODeterminationActivity" />
    </application>

</manifest>