<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions

        'requestLegacyExternalStorage=true' effectuates opting out of
         scoped storage for API 29 to enable external storage writing;
         @see
            https://developer.android.com/training/data-storage/use-cases#modify-delete-media
            https://stackoverflow.com/a/65477206/12083276

        WRITE_EXTERNAL_STORAGE implies READ_EXTERNAL_STORAGE
        @see
            https://stackoverflow.com/questions/64221188/write-external-storage-when-targeting-android-10 -->

    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- Required by ScreenCaptureListeningService  -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE"/> <!-- System Permission -> granted automatically -->

    <!-- Application -->

    <application
        android:label="@string/app_title"
        tools:replace="android:label"

        android:name="com.autocrop.AutoCrop"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Main"

        android:appCategory="image">

        <!-- Services -->

        <service
            android:name="com.autocrop.screencapturelistening.CropIOService"
            android:exported="false"/>
        <service
            android:name="com.autocrop.screencapturelistening.ScreenCaptureListeningService"
            android:exported="false"/>

        <!-- Activities -->

        <activity
            android:name="com.autocrop.activities.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Splash">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.autocrop.activities.cropping.CropActivity" />
        <activity
            android:name="com.autocrop.activities.iodetermination.IODeterminationActivity" />
    </application>
</manifest>