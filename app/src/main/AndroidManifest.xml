<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions

        'requestLegacyExternalStorage=true' effectuates opting out of
         scoped storage for API 29 to enable external storage writing;
         @see
            https://developer.android.com/training/data-storage/use-cases#modify-delete-media
            https://stackoverflow.com/a/65477206/12083276

        WRITE_EXTERNAL_STORAGE implies READ_EXTERNAL_STORAGE
        @see
            https://stackoverflow.com/questions/64221188/write-external-storage-when-targeting-android-10 -->

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <!-- ScreenCaptureListening -->

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- System Permission -> granted automatically -->

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- SDK >= 33 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- SDK >= 33 -->

    <!-- Application -->

    <application
        android:name=".Application"
        android:appCategory="image"

        android:icon="@mipmap/logo"
        android:label="@string/app_title"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Main"

        tools:replace="android:label">

        <!-- Activities -->

        <activity
            android:name="com.w2sv.autocrop.activities.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Splash">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name="com.w2sv.autocrop.activities.crop.CropActivity" />
        <activity android:name="com.w2sv.autocrop.activities.cropexamination.CropExaminationActivity" />

        <!-- Services -->

        <service
            android:name="com.w2sv.autocrop.screenshotlistening.services.ScreenshotListener"
            android:exported="false" />

        <receiver android:name="com.w2sv.autocrop.screenshotlistening.services.ScreenshotListener$OnCancelledFromNotificationListener" />
        <receiver
            android:name="com.w2sv.autocrop.activities.main.MainActivity$OnCancelledScreenshotListenerFromNotificationListener"
            tools:ignore="Instantiatable" />

        <service
            android:name="com.w2sv.autocrop.screenshotlistening.services.CropIOService"
            android:exported="false" />
        <activity
            android:name="com.w2sv.autocrop.screenshotlistening.services.DeleteRequestActivity"
            android:excludeFromRecents="true"
            android:noHistory="true" />

        <service
            android:name="com.w2sv.autocrop.screenshotlistening.services.OnPendingIntentService"
            android:exported="false" />
    </application>
</manifest>